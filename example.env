# Основные настройки
NODE_ENV=development
PORT=3000
APP_URL=http://localhost:3000
JWT_SECRET=your-secret-key

# База данных
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/baassist

# Google Cloud Storage
GCS_PROJECT_ID=ba-assistant-project
GCS_BUCKET=baassist-files
GCS_KEY_FILE=keys/gcs-service-account.json
USE_REAL_GCS=false

# Сервис парсера
PARSER_URL=http://localhost:4000/extract-text

# Настройки электронной почты
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASS=your-password
EMAIL_FROM=noreply@baassist.com

# OpenAI API
OPENAI_API_KEY=sk-your-api-key
OPENAI_MODEL=gpt-3.5-turbo
# Поддерживаемые модели: gpt-3.5-turbo, gpt-4, gpt-4-turbo-preview